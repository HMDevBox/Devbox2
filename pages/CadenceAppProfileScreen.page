<apex:page showHeader="false" sidebar="false" showChat="false" controller="CadenceSSOController" language="{!cadencesiteuserlang}">
<script>
    function closealert()
    {
        document.getElementById("alertpanel").className = "alertboxbackstylehidden";   
    }
    function openalert()
    {
        document.getElementById("alertpanel").className = "alertboxbackstyle";   
    }        
</script>
<style>
    .cadencepageheaderstyle{
        width : 100%;
        height : 80px;
        border-bottom : outset;
        border-width : 1px;
        background: linear-gradient(white, #E6E6E6);
    }
    .cadencelogostyle{
        position : absolute;
        left : 200px;
    }
    .langseletstyle{
        position : absolute;
        top:10px;
        left : 1000px;
        font-family: "Arial Black", Gadget, sans-serif;
        font-size:11px;
        color : blue;
    }
    .langselethoverstyle{
        position : absolute;
        top:10px;
        left : 1000px;
        font-family: "Arial Black", Gadget, sans-serif;
        font-size:11px;
        color : red;
        opacity: 0.5;
    }
    .loginpagebodystyle{
        position : absolute;
        left : 200px;
        border-style : solid;
        border-width : 1px;
        border-color : #E6E6E6;
        margin-top : 20px;
        border-radius : 10px;
        margin-bottom :20px;
    }
    .loginleftpanelstyle{
        background: linear-gradient(white, #E6E6E6);
        height : 500px;
        border-style : solid;
        border-width : 0px;
        width : 450px;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }
    .loginrightpanelstyle{
        height : 500px;
        border-style : solid;
        border-width : 0px;
        width : 450px;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
    }
    .cadenpagefooterstyle{
        width : 100%;
        border-top : solid;
        border-width : 1px;
        border-color : #E6E6E6;
        position : relative;
        margin-top : 550px;
    }
    .cadenfootercontentstyle{
        position : absolute;
        left : 200px;
        color : silver;
    }
    .appnamestyle{
        font-size : 20px;
        font-weight : bold;
        font-family: "Arial Black", Gadget, sans-serif;
        margin : 20px;
        position : relative;
        top : 10px;
        height : 100px;
    }
    .rightappnamestyle{
        font-size : 20px;
        font-weight : bold;
        font-family: "Arial Black", Gadget, sans-serif;
        margin : 20px;
        position : relative;
        top : 10px;
        height : 100px;
        color : #CB4154;
    }
    .labelheaderstyle{
        font-weight:bold;
        margin:20px;
        position:relative;
        top:20px;
        font-family:"Arial Black", Gadget, sans-serif;
        font-size:12px;
    }
    .labelbodystyle{
        width:400px;
        margin:20px;
        position:relative;
        top:-0px;
        font-family: Verdana, Geneva, sans-serif;
        font-size:11px;
        text-align: justify;
    }
    .tablefieldstyle{
        margin:20px;
    }
    .labelfieldstyle{
        text-align : right;
        font-family: Verdana, Geneva, sans-serif;
        font-size:11px;
        font-weight:bold;
    }
    .cadencelogintxtboxstyle{
        border-style : solid;
        border-width : 1px;
        border-color : #E6E6E6;
        border-radius : 5px;
        width : 200px;
    }
    .cadencebtnstyle{
        width:60px;
        height:20px;
    }
    .profillabelstyle{
        width : 200px;
        height : 30px;
        text-align : right;
    }
    .profilvaluestyle{
        width : 500px;
        height : 30px;
        text-align : left;
    }
    .alertboxstyle{
        position : absolute;
        left : 350px;
        top : 100px;
        border-style : solid;
        border-width : 2px;
        border-color : #E6E6E6;
        margin-top : 20px;
        border-radius : 10px;
        width : 600px;
        height : 300px;
        background-color : white;
        opacity: 1.0;
    }
    .alertboxbackstyle{
        width : 100%;
        height : 550px;
        background-color : black;
        border-style : solid;
        border-width: 0px;
        position : absolute;
        opacity: 0.8;
    }
    .alertboxbackstylehidden{
        width : 100%;
        height : 550px;
        background-color : black;
        border-style : solid;
        border-width: 0px;
        position : absolute;
        opacity: 0.8;
        display : none;
    }
    .actionpanelstyle{
        border-top : solid;
        border-width : 1px;
        border-color : #E6E6E6;
        height : 30px;
    }
    .inputtxtboxstyle{
        width : 400px;
    }
</style>
<html>
    <apex:form >
    <title>User Profile</title>
    <body>
        <div id="cadencepageheader" class="cadencepageheaderstyle">
            <div class="cadencelogostyle">
                <apex:image url="{!$Resource.Cadencelogo}" title="Cadence Design Systems"/>
            </div>
        </div>
        <div id="profilepagebody" class="loginpagebodystyle">
            <table>
                <tr>
                    <td class="profillabelstyle">
                        First Name
                    </td>
                    <td class="profilvaluestyle">
                        <apex:inputtext styleclass="inputtxtboxstyle" value="{!cadenceappuser.FirstName}"/>
                    </td>
                </tr>
                <tr>
                    <td class="profillabelstyle">
                        Last Name
                    </td>
                    <td class="profilvaluestyle">
                        <apex:inputtext styleclass="inputtxtboxstyle" value="{!cadenceappuser.LastName}"/>
                    </td>
                </tr>
                <tr>
                    <td class="profillabelstyle">
                        Login ID
                    </td>
                    <td class="profilvaluestyle">
                        <apex:inputtext styleclass="inputtxtboxstyle" value="{!cadenceappuser.LastName}"/>
                    </td>
                </tr>
                <tr>
                    <td class="profillabelstyle">
                        Company/Institution
                    </td>
                    <td class="profilvaluestyle">
                        <apex:inputtext styleclass="inputtxtboxstyle" value="{!cadenceappuser.LastName}"/>
                    </td>
                </tr>
            </table>
            <div class="actionpanelstyle">
                <button style="float:right;" type="button" onclick="openalert();">
                    SUBMIT
                </button>
            </div>
        </div>
        <div id="alertpanel" class="alertboxbackstylehidden">
            <div id="alertbox" class="alertboxstyle">
                <table>
                    <tr>
                        <apex:image id="alertbtn" onclick="closealert();" url="{!$Resource.CadencealertClose}" width="20px" height="20px"/>
                    </tr>
                    <tr>
                    </tr>
                </table>
            </div>
        </div>
        <div id="cadenpagefooter" class="cadenpagefooterstyle">
            <div class="cadenfootercontentstyle">
                Â© Cadence Design Systems, Inc. All Rights Reserved.
            </div>
        </div>
    </body>
    </apex:form>
</html>
</apex:page>